{
	"plugins": ["prettier-plugin-solidity"],
	"printWidth": 120,
	"tabWidth": 2,
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"bracketSameLine": false,
	"jsxSingleQuote": false,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": true,
	"singleQuote": false,
	"trailingComma": "none",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": false,
				"singleQuote": false,
				"bracketSpacing": false
			}
		},
		{
			"files": "*.ts",
			"options": {
				"bracketSpacing": true,
				"endOfLine": "lf",
				"bracketSameLine": false,
				"jsxSingleQuote": false,
				"printWidth": 160,
				"proseWrap": "preserve",
				"quoteProps": "as-needed",
				"semi": true,
				"singleQuote": false,
				"tabWidth": 4,
				"trailingComma": "all",
				"useTabs": true
			}
		}
	]
}
